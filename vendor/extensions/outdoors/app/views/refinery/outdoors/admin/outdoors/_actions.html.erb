<ul>
  <% if ::Refinery::Outdoors::Admin::OutdoorsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.outdoors_admin_outdoors_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_outdoors_admin_outdoor_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Outdoors::Admin::OutdoorsController.sortable? && ::Refinery::Outdoors::Outdoor.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Outdoors"),
                 refinery.outdoors_admin_outdoors_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Outdoors"),
                 refinery.outdoors_admin_outdoors_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
