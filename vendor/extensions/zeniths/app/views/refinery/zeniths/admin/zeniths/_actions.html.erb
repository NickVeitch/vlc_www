<ul>
  <% if ::Refinery::Zeniths::Admin::ZenithsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.zeniths_admin_zeniths_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_zeniths_admin_zenith_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Zeniths::Admin::ZenithsController.sortable? && ::Refinery::Zeniths::Zenith.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Zeniths"),
                 refinery.zeniths_admin_zeniths_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Zeniths"),
                 refinery.zeniths_admin_zeniths_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
