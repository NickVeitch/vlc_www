<script type="text/javascript">
    // documetation tab
    $(document).ready(function() {


       var page_name = $('input[name="page-referance"]').val();

   // console.log(page_name);

    $('.newsidebarmenu .sidebarmenutypes a').each(function(){
      $(this).parents(".sidebarmenu.newsidebarmenu").find('.sidebarmenutypes').removeClass("activesidebarmenu");
