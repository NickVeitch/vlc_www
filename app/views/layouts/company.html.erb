<body  >
<div class="main-wrapper">
  <%= render "/refinery/header" %>
  <div class="banner-wrapper">
    <div class="innerbannerZenith">
      <div class="main-wrapper-fixed">
        <div class="innerImageBanner zenithInnerImageBanner">
          <div class="innerTextDiv">
            <div class="InnerBoxContainer">
              <div class="innerTextDivRow">
                Veitch Lister Counsulting,
              </div>
              <div class="innerTextDivRow">
                the Transport Planning, Modelling &amp; Data Experts.
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

  <div class="mainContent-wrapper">
    <div class="main-wrapper-fixed contentwrapper">
      <div class="contentfulll">
        <div class="right-menu-toggle">
          <a href="javascript:void(0)" class="closed-view"><img src="../../assets/slide_menu.png" alt="Slide Menu" /><span>Open Side Menu</span>
          </a>
        </div>
      <%= yield %>
      <div class="breadcrumbs_menu oldbreadcrumbs">
        <ul class="breadcrumbul">
          <li><a href="/">Home</a>
          </li>
          <% for bc in 0..(breadcrumbs[:count]-1) %>
              <li><a href="/<%= breadcrumbs[:crumb_array][0..bc].join("/") %>"><%= breadcrumbs[:crumb_array][bc] %></a></li>
          <% end %>

        </ul>
        <hr class="horizontalLine" />
      </div>

      <% if params[:path].split("/").last == "company" or "history" or "customers" or "careers" or "current_opportunities" or "news" or "news1" %>
          <div class="sidebarmenu newsidebarmenu">
            <div class="sidebarmenuheading">
              <h1>Company</h1>
            </div>
            <div class="sidebarmenutypes activesidebarmenu"> <a class="active" href="/company">Overview</a> </div>
            <div class="sidebarmenutypes"> <a href="/company/history">History</a> </div>
            <div class="sidebarmenutypes"> <a href="/company/customers">Customers</a> </div>
            <div class="sidebarmenutypes"> <a href="/company/careers">Careers</a> </div>
            <div class="sidebarmenutypes"> <a href="/company/news">News</a> </div>

          </div>

      <%end%>






     </div>
    </div>
  </div>

  <%= render "/refinery/footer" %>
</div>


